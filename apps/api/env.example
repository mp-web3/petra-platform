# Application
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Secret (optional for local dev - has fallback)
# For production, set a strong random secret
# JWT_SECRET=your-super-secret-jwt-key

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs for Plans
# Woman Plans
PRICE_ID_W_STARTER_6W=price_...
PRICE_ID_W_STARTER_18W=price_...
PRICE_ID_W_STARTER_36W=price_...
PRICE_ID_W_PREMIUM_6W=price_...
PRICE_ID_W_PREMIUM_18W=price_...
PRICE_ID_W_PREMIUM_36W=price_...

# Man Plans
PRICE_ID_M_STARTER_6W=price_...
PRICE_ID_M_STARTER_18W=price_...
PRICE_ID_M_STARTER_36W=price_...
PRICE_ID_M_PREMIUM_6W=price_...
PRICE_ID_M_PREMIUM_18W=price_...
PRICE_ID_M_PREMIUM_36W=price_...

# Rate Limiting (Optional - uses defaults if not set)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Email Service (Resend)
RESEND_API_KEY=re_...

# Redis (for production rate limiting storage)
# Leave unset for in-memory storage (development)
REDIS_HOST=localhost
REDIS_PORT=6379

# Admin Notifications
# Comma-separated list of admin email addresses to notify when new orders are placed
# Example: ADMIN_EMAILS=admin@coachingpetra.com,petra@coachingpetra.com
ADMIN_EMAILS=admin@coachingpetra.com
